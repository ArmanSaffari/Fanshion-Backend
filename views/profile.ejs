<!DOCTYPE html>
<html lang="en">
  <%- include('header') %>
  <body>
    <!-- navbar -->
    <%- include('navbar') %>

    <!-- main container -->
    <div class="container mx-auto row p-0">
      <!-- left section -->
      <div
        class="position-relative col-md-4 col-sm-12 bg-pale-blue p-5 border-end-pink"
      >
        <div
          id="profileImageContainer"
          class="position-relative mb-4 ratio ratio-1x1 rounded-3 border-pink"
        >
          <img
            id="profileImage"
            src="/assets/icons/profileAvatar.png"
            class="rounded-3 object-fit-cover w-100"
          />
          <div
            class="bg-transparent d-flex justify-content-end align-items-end"
          >
            <div
              id="profileBtnsContainer"
              class="input-group d-none w-100 d-flex justify-content-between p-1 flex-nowrap"
            >
              <img
                id="deleteProfileImage"
                height="35px"
                src="/assets/icons/imageRemove.svg"
                class="bg-white rounded-3 m-0"
              />
              <div
                id="selectedPhoto"
                class="d-none position-relative d-flex align-items-end bg-white border-0 mx-2 text-dark rounded-3 p-1 fw-bold m-0 flex-shrink-1"
                style="font-size: 12px"
              >
                Image Selected
                <img
                  id="clearProfileImageInput"
                  src="/assets/icons/close.svg"
                  width="15px"
                  height="15px"
                  class="bg-danger rounded-5 position-absolute top-0 end-0"
                />
              </div>
              <input
                type="file"
                class="form-control d-none"
                id="profileImageUploadBtn"
              />
              <label
                for="profileImageUploadBtn"
                id="profileImageUploadLabel"
                class="input-group-text rounded-3 p-0 bg-transparent border-0"
              >
                <img
                  class="bg-white rounded-3 m-0"
                  height="35px"
                  src="/assets/icons/imageEdit.svg"
                />
              </label>
            </div>
          </div>
        </div>

        <div id="userDetails" class="row fs-5 text-uppercase my-5">
          <div class="d-flex align-items-center flex-wrap my-2">
            <img src="/assets/icons/birthday-cake1.svg" height="20px" />
            <span id="DOB" class="ms-1"></span>
          </div>
          <div class="d-flex align-items-center flex-wrap my-2">
            <span class="text-decoration-underline fw-light">AGE:</span>
            <span id="age" class="ms-1"></span>
          </div>
          <div class="d-flex align-items-center flex-wrap my-2">
            <span class="text-decoration-underline fw-light">FROM:</span>
            <span id="from" class="ms-1 fw-normal"></span>
          </div>
          <div class="d-flex align-items-center flex-wrap my-2">
            <span class="text-decoration-underline fw-light">Lives in:</span>
            <span id="livesIn" class="ms-1 fw-normal"></span>
          </div>
          <div class="d-flex align-items-center flex-wrap my-2">
            <span class="text-decoration-underline fw-light">occupation:</span>
            <span id="occupation" class="ms-1 fw-normal"></span>
          </div>
          <div
            id="favoriteBrandContainer"
            class="d-flex align-items-center flex-wrap my-2"
          >
            <div class="col-12 text-decoration-underline fw-light">
              Favorite brand:
            </div>
            <a href="#" class="my-3">
              <img
                id="favoriteBrand"
                src=""
                alt=""
                class="border border-dark rounded object-fit-cover"
                width="150px"
                height="100px"
              />
            </a>
          </div>
        </div>

        <div id="editProfileFields" class="d-none row fs-5 text-uppercase my-5">
          <form id="editProfileEdit">
            <div class="mb-1 w-100">
              <label for="firstNameInput" class="form-label fs-6 m-0"
                >First Name *</label
              >
              <input
                type="text"
                class="font-inter form-control-sm bg-transparent border border-dark w-100"
                id="firstNameInput"
              />
            </div>

            <div class="mb-1 w-100">
              <label for="lastName" class="form-label fs-6 m-0"
                >Last Name *</label
              >
              <input
                type="text"
                class="font-inter form-control form-control-sm bg-transparent border border-dark w-100"
                id="lastNameInput"
              />
            </div>

            <div class="mb-2 w-100">
              <label for="DOBInput" class="form-label fs-6 m-0"
                >Date of Birth</label
              >
              <input
                type="date"
                id="DOBInput"
                class="font-inter form-control form-control-sm bg-transparent border border-dark w-100"
              />
            </div>

            <div class="mb-0 w-100">
              <label
                for="ageInput"
                class="form-label fs-6 m-0 d-flex justify-content-between w-100"
              >
                <div>Age</div>
                <div id="ageDisplay"></div>
              </label>
              <input
                type="range"
                id="ageInput"
                class="form-range bg-transparent w-100"
                min="1"
                max="100"
                step="1"
                value="25"
              />
            </div>

            <div class="mb-1 w-100">
              <label for="fromInput" class="form-label fs-6 m-0">From</label>
              <input
                type="text"
                id="fromInput"
                class="font-inter form-control form-control-sm bg-transparent border border-dark w-100"
              />
            </div>

            <div class="mb-1 w-100">
              <label for="livesInInput" class="form-label fs-6 m-0"
                >Lives In</label
              >
              <input
                type="text"
                id="livesInInput"
                class="font-inter form-control form-control-sm bg-transparent border border-dark w-100"
              />
            </div>

            <div class="mb-1 w-100">
              <label for="occupationInput" class="form-label fs-6 m-0"
                >Occupation</label
              >
              <input
                type="text"
                id="occupationInput"
                class="font-inter form-control form-control-sm bg-transparent border border-dark w-100"
              />
            </div>

            <div class="mb-1 w-100">
              <label for="favoriteBrandInput" class="form-label fs-6 m-0"
                >Favorite Brand</label
              >
              <select
                id="favoriteBrandInput"
                class="form-select form-select-sm bg-transparent border border-dark w-100"
                aria-label=".form-select-sm"
              >
                <option class="bg-pale-blue" selected></option>
                <option class="bg-pale-blue" value="ZARA">ZARA</option>
                <option class="bg-pale-blue" value="H&M">H&M</option>
                <option class="bg-pale-blue" value="calvin klein">
                  Calvin Klein
                </option>
                <option class="bg-pale-blue" value="GUCCI">Gucci</option>
                <option class="bg-pale-blue" value="abercrombie & fitch">
                  Abercrombie & Fitch
                </option>
              </select>
            </div>
          </form>
        </div>
        <br />
        <br />
        <div
          id="profileButtons"
          class="row fs-6 text-uppercase position-absolute bottom-0 w-75"
        >
          <div
            id="uploadProgressContainer"
            class="d-none progress w-100"
            role="progressbar"
            aria-label="Example with label"
            aria-valuenow="25"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            <div
              id="uploadProgressBar"
              class="progress-bar bg-info rounded-5"
              style="width: 0%"
            >
              0%
            </div>
          </div>
          <div
            id="editProfileBtnContainer"
            class="d-flex align-items-center my-2"
          >
            <img src="/assets/icons/Edit.svg" height="20px" />
            <button
              id="editProfileBtn"
              class="bg-transparent profile-btn border-0 text-uppercase"
            >
              Edit Profile
            </button>
          </div>
          <div
            id="saveProfileBtnContainer"
            class="d-none d-flex align-items-center my-2"
          >
            <img src="/assets/icons/check.svg" height="20px" />
            <button
              id="saveChangesBtn"
              class="bg-transparent profile-btn border-0 text-uppercase"
            >
              Save Changes
            </button>
            <img src="/assets/icons/close.svg" height="20px" />
            <button
              id="cancelBtn"
              class="bg-transparent profile-btn border-0 text-uppercase"
            >
              Cancel
            </button>
          </div>
          <div id="settingBtnContainer" class="d-flex align-items-center my-2">
            <img src="/assets/icons/Settings.svg" height="20px" />
            <button
              id="settingsBtn"
              class="bg-transparent profile-btn border-0 text-uppercase"
            >
              Settings
            </button>
          </div>
        </div>
      </div>

      <!-- <div class="position-absolute bg-black w-100 h-100"></div> -->
      <!-- right section -->
      <div id="rightSection" class="col-md-8 col-sm-12 p-5 text-uppercase">
        <div class="row d-flex align-items-center">
          <div id="name" class="fs-1 d-inline fw-bolder w-auto"></div>
          <button
            class="mt-2 d-inline btn btn-dark btn-sm border-0 ms-4"
            style="width: 100px"
          >
            Subscribe
          </button>
        </div>

        <div class="w-100 fw-normal fs-4 mt-3">Saved Items</div>
        <div
          id="savedItemsContainer"
          class="row overflow-x-auto overflow-y-hidden d-flex flex-row p-0 flex-nowrap border-pink rounded p-5 overflow-x-auto w-100"
        ></div>

        <div class="w-100 fw-normal fs-4 mt-3">Posts</div>
        <div
          class="row overflow-x-auto overflow-y-hidden d-flex flex-row p-0 flex-nowrap border-pink rounded p-5 overflow-x-auto w-100"
          style="height: 350px"
        >
          There is not post yet!
        </div>

        <div class="w-100 fw-normal fs-4 mt-3">Reviews</div>
        <div
          class="row overflow-x-auto overflow-y-hidden d-flex flex-row p-0 flex-nowrap border-pink rounded p-5 overflow-x-auto w-100"
          style="height: 350px"
        >
          There is not reviews yet!
        </div>
      </div>
    </div>

    <!-- footer with Bootstrap -->
    <%- include('footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.min.js"
      integrity="sha384-heAjqF+bCxXpCWLa6Zhcp4fu20XoNIA98ecBC1YkdXhszjoejr5y9Q77hIrv8R9i"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-firestore.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-storage.js"></script>
    <script src="/js/mainScript.js"></script>
    <script src="/js/dbConfig.js"></script>
    <script src="/js/profile.js"></script>
  </body>
</html>
