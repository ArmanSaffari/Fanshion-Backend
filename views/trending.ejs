    <!-- navbar with BOOOTSTRAP -->
    <%- include('navbar') %>

    <div id="trending-container" class="container-fluid my-0">
      <div
        class="container d-flex justify-content-center flex-column mb-5 py-5"
      >
        <!-- row 1 -->
        <div class="row bg-white p-5 mb-5">
          <div class="col-sm-12 col-md-6 d-flex align-items-center">
            <h4>Learn about brand features</h4>
          </div>
          <div class="col-sm-12 col-md-6">
            <img class="w-100" src="/assets/Page8/Outdoor shoot.jpg" />
          </div>
        </div>

        <!-- row 1.5 -->
        <div class="row bg-white p-5 mb-5">
          <div class="col-sm-12 col-md-6 d-flex align-items-center">
            <h4>Fashion News</h4>
          </div>
          <div class="col-12" id="FashionNewsContainer">
            <!-- carousel -->
            <div
              id="newsCarousel"
              class="carousel slide"
              data-bs-ride="carousel"
            >
              <div class="carousel-indicators">
                <button
                  id="placeHolderBtn"
                  type="button"
                  data-bs-target="#carouselExampleIndicators"
                  data-bs-slide-to="0"
                  class="active"
                  aria-current="true"
                  aria-label="Slide 1"
                ></button>
              </div>
              <div class="carousel-inner">
                <div id="placeHolderItem" class="carousel-item active">
                  <img
                    class="d-block w-100 object-fit-cover"
                    height="500px"
                    src="https://source.unsplash.com/alkChvKEpYk"
                    alt="..."
                  />
                  <div
                    class="bg-white bg-opacity-50 rounded-3 carousel-caption"
                  >
                    <h5 class="mb-4 title-pink">
                      Stay in Style: Fashion News and Trends!
                    </h5>
                    <button
                      href="#"
                      type="button"
                      class="btn btn-outline-dark d-none"
                    >
                      Read More
                    </button>
                  </div>
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#newsCarousel"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#newsCarousel"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>

